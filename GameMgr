#include "GameMgr.h"


CGameMgr::CGameMgr(void)
{
}


CGameMgr::~CGameMgr(void)
{
}

void CGameMgr::Init( void )
{
	
}

void CGameMgr::Move( void )
{
	
}


void CGameMgr::Draw( bool on )
{
	HDC hdc = GetDC(hWnd);

	if (on == true)
	{
		for (int i = 0; i < 30; i++)
		{
			int x = rand() % 1024;
			int y = rand() % 768;

			MakeCircle(x, y,hdc);
		}
	}

}

void CGameMgr::Destroy( void )
{
}

void CGameMgr::MakeCircle(int x, int y, HDC hdc)
{
	for (int i = 0; i < 30; i++)
	{
		HPEN hPen, oldPen;
		HBRUSH hBrush, oldBrush;

		int R, G, B;
		R = rand() % 256;
		G = rand() % 256;
		B = rand() % 256;

		int r = 15;

		hPen = CreatePen(PS_SOLID, 2, RGB(R,G,B));
		hBrush = CreateSolidBrush(RGB(R,G,B));

		oldPen = (HPEN)SelectObject(hdc, hPen);
		oldBrush = (HBRUSH)SelectObject(hdc, hBrush);
		Ellipse(hdc, x - (r / 2), y - (r / 2), x + (r / 2), y + (r / 2));

		SelectObject(hdc, oldPen);
		SelectObject(hdc, oldBrush);

		DeleteObject(hPen);
		DeleteObject(hBrush);
	}

}
